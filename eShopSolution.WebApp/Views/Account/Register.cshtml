    <form asp-action="Register" class="form-horizontal">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="control-group">
            <label asp-for="FirstName" class="control-label"></label>
            <div class="controls">
                <input asp-for="FirstName" />
                <span asp-validation-for="FirstName" class="text-error"></span>
            </div>
        </div>
        <div class="control-group">
            <label asp-for="LastName" class="control-label"></label>
            <div class="controls">
                <input asp-for="LastName" />
                <span asp-validation-for="LastName" class="text-error"></span>
            </div>
        </div>
        <div class="control-group">
            <label asp-for="Dob" class="control-label"></label>
            <div class="controls">
                <input asp-for="Dob" />
                <span asp-validation-for="Dob" class="text-error"></span>
            </div>
        </div>
        <div class="control-group">
            <label asp-for="Email" class="control-label"></label>
            <div class="controls">
                <input type="text" asp-for="Email" />
                <span asp-validation-for="Email" class="text-error"></span>
            </div>
        </div>
        <div class="control-group">
            <label asp-for="PhoneNumber" class="control-label"></label>
            <div class="controls">
                <input asp-for="PhoneNumber" />
                <span asp-validation-for="PhoneNumber" class="text-error"></span>
            </div>
        </div>
        <div class="control-group">
            <label asp-for="Username" class="control-label"></label>
            <div class="controls">
                <input asp-for="Username" />
                <span asp-validation-for="Username" class="text-error"></span>
            </div>
        </div>
        <div class="control-group">
            <label asp-for="Password" class="control-label"></label>
            <div class="controls">
                <input asp-for="Password" />
                <span asp-validation-for="Password" class="text-error"></span>
            </div>
        </div>
        <div class="control-group">
            <label asp-for="ConfirmPassword" class="control-label"></label>
            <div class="controls">
                <input asp-for="ConfirmPassword" />
                <span asp-validation-for="ConfirmPassword" class="text-error"></span>
            </div>
        </div>
        <div class="control-group">
            <input type="submit" value="Register" class="btn btn-primary" />
        </div>
